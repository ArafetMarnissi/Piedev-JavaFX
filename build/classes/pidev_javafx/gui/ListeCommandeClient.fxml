            <Button fx:id="btnModifer" mnemonicParsing="false" onAction="#ModiferCommandeClient" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #1372f4; -fx-background-radius: 25;" text="Modifer" textFill="WHITE" />
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="btnSupprimer" mnemonicParsing="false" onAction="#SupprimerCommande" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #1372f4; -fx-background-radius: 25;" text="Supprimer" textFill="WHITE" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
