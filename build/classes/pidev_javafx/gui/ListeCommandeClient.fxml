      </VBox>
   </center>
   <right>
      <HBox BorderPane.alignment="CENTER" />
   </right>
   <left>
      <HBox BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <HBox spacing="35.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAjouterCommande" mnemonicParsing="false" onAction="#AjouterCommandeClient" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #1372f4; -fx-background-radius: 25;" text="Ajouter Commande" textFill="WHITE" />
