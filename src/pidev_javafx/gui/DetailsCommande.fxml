         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <right>
      <HBox BorderPane.alignment="CENTER" />
   </right>
   <left>
      <HBox BorderPane.alignment="CENTER" />
   </left>
   <bottom>
      <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="35.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnModifer" mnemonicParsing="false" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #1372f4; -fx-background-radius: 25;" text="Modifer" textFill="WHITE" />
